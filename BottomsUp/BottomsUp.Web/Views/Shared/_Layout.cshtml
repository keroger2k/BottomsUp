<!DOCTYPE html>
<html ng-app="myApp">
@using StackExchange.Profiling;
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>Bottoms Up: @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/bundles/styles")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-default navbar-fixed-top" style="">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed " data-toggle="collapse"
                        data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/">
                    <img data-src="holder.js/20x20" class="img-circle my-button"
                         style="float:left;margin-right:5px;">Bottoms Up
                </a>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li><a href="#" class="">Link 1</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="#">Link</a></li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
                            Dropdown
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="#">Action</a></li>
                            <li><a href="#">Another action</a></li>
                            <li><a href="#">Something else here</a></li>
                            <li class="divider"></li>
                            <li><a href="#">Separated link</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container-fluid -->
    </nav>
    <div ng-controller="MainController">
        <h1>{{message}}</h1>
        <div>
            <div>
                name: {{user.name}}
            </div>
            <div>
                location: {{user.location}}
            </div>
            <img ng-src="{{user.avatar_url}}" title="{{user.name}}" />
        </div>
    </div>

    @RenderBody()

    <div class="sb-slidebar sb-left sb-static">
        <h3>Actions Items</h3>
        <ul class="sidebar action-items">
            <li><a href="">Add New Task</a></li>
        </ul>
        <h3>Status</h3>
        <h3>Another Setting</h3>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/site")

    @RenderSection("scripts", required: false)
    @MiniProfiler.RenderIncludes()

    <script type="text/javascript">
        var myApp = angular.module('myApp', []);

        var MainController = function ($scope, $http) {
            var onUserComplete = function (response) {
                $scope.user = response.data;
            };

            $http.get("https://api.github.com/users/robconery").then(onUserComplete);

            $scope.message = "Hello, Angular!";
        };

        myApp.controller('MainController', MainController);

    </script>
</body>
</html>
